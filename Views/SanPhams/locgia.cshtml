@using Doanphanmem.Models
@model IEnumerable<SanPham>
@{
    ViewBag.Title = "locgia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*san pham dd*@
<div class="container-fluid mt-5">
    <div class="text-center" style="background-color: var(--maudo); padding: 10px;">Sản phẩm</div>

    <div class="row mt-3 p-5">
        @foreach (var sp in Model)
        {
            <div class="col-sm-3 mb-4">
                <div class="card">
                    <a href="@Url.Action("laychitietsp", "SanPhams", new {id = sp.MaSP })"> <img src="~/Image/@sp.Hinh1" class="card-img-top" alt="Iphone"></a>
                    <div class="card-body">
                        <h5 class="card-title">@sp.TenSP</h5>
                        <p class="card-text">@sp.Mota</p>
                        <p class="card-text">@sp.GiaSp</p>
                        <p class="card-text">Giá</p>
                        <div class="row">
                            <a href="#" class="btn btn-primary ">Đặt hàng</a>
                            <a href="#" class="btn btn-success" style="margin-top: 10px">Thêm vào giỏ hàng</a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
    </div>


