@model List<Doanphanmem.Models.SanPham>
<h1s style="text-align:center">Danh sách sản phẩm yêu thích</h1s>
<style>
     body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        margin: 0;
        padding: 0;
    }

    .product {
        display: flex;
        background-color: #fff;
        margin: 20px;
        padding: 20px;
        width:500px;
        
    }


        .product h1 {
            font-size: 24px;
        }

        .product p {
            font-size: 16px;
            margin: 10px 0;
        }

    .buy-button {
        background-color: #333;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    p {
        letter-spacing: 0cap;
    }

    .product-image {
        width: 200px;
        height: 200px;
    }
    .product-row{
        display:flex;
    }
</style>
   
<div product_row>
    @foreach (var product in Model)
    {
        <div class="product">
            <div class="product-image">
                <img height="180" width="250" src="data:image/jpeg;base64," alt="Sản phẩm của bạn">
            </div>

            <div class="product-info" style="margin-top:25px;">
                <h1>@product.TenSP</h1>
                <p>Gía Tiền: @product.GiaSp VNĐ</p>
            </div>
            <div style="margin-top:25px;">

                <a style="margin-bottom:10px;" href="@Url.Action("AddProduct", "GioHang", new{ MaSP = product.MaSP })">
                    <button class="buy-button">
                        Thêm Vào Giỏ Hàng
                    </button>
                </a> 
                <div class="product-favo">
                    @if (Session["UserID"] != null)
                    {
                        @Html.ActionLink("Xóa khỏi danh sách yêu thích", "AddToFavorite", "YeuThich", new { productId = product.MaSP }, new { @class = "btn btn-primary" })
                    }
                </div>
            </div>
        </div>
    }
</div>