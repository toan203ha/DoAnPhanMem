@model IEnumerable<Doanphanmem.Models.Vourcher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="page-header">
     <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a href="~/Admin/" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Dashboard</a>
            <span class="breadcrumb-item active">Quản lý giảm giá sản phẩm</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h2 class="header-title" style="text-align:center;">Quản lý danh sách sản phẩm giảm giá</h2>
        <div class="row m-b-30">
            <div class="col-lg-12 text-right">
                <a href="~/Vourchers/Create" class="btn btn-primary">
                    <i class="anticon anticon-plus-circle m-r-5"></i>
                    <span>Thêm mới</span>
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-hover e-commerce-table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>
                            Gía Trị Ưu Đãi
                        </th>
                        <th>
                            Thông Tin Ưu Đãi
                        </th>
                        <th>
                            Tên Sản Phẩm
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                #@item.MaKM
                            </td>
                            <td>
                                @item.Uudai
                            </td>
                            <td>@item.ThongTinUuDai</td>
                            <td>@item.SanPham.TenSP</td>

                            <td class="text-right">
                                <a href="/Vourchers/Edit/@item.MaKM" class="btn btn-icon btn-hover btn-sm btn-rounded pull-right">
                                    <i class="anticon anticon-edit"></i>
                                </a>
                                <a href="/Vourchers/Delete/@item.MaKM" class="btn btn-icon btn-hover btn-sm btn-rounded">
                                    <i class="anticon anticon-delete"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
